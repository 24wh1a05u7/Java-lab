
public class EncapsulationExample {
    public static void main(String[] args) {
        
        Employee emp1 = new Employee("Amit", 25);

        
        System.out.println("Employee Name: " + emp1.getName());
        System.out.println("Employee Age: " + emp1.getAge());

    
        emp1.setName("Varma");
        emp1.setAge(30);

        System.out.println("Updated Name: " + emp1.getName());
        System.out.println("Updated Age: " + emp1.getAge());
    }
}
class Employee {
   
    private String name;
    private int age;

   
    public Employee(String name, int age) {
        this.name = name;
        this.age = age;
    }

    
    public String getName() {
        return name;
    }

   
    public void setName(String name) {
        this.name = name;
    }

 
    public int getAge() {
        return age;
    }

    
    public void setAge(int age) {
        if (age > 0) {  
            this.age = age;
        }
    }
}
output
Employee Name: Amit
Employee Age: 25
Updated Name: Varma
Updated Age: 30
