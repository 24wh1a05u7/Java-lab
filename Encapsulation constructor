class Employee {
    
    private String name;
    private double salary;

    
    public Employee(String name, double salary) {
        this.name = name;
        this.salary = salary;
    }

    
    public String getName() {
        return name;
    }

    public double getSalary() {
        return salary;
    }

    
    public void setName(String name) {
        this.name = name;
    }

    public void setSalary(double salary) {
        if(salary > 0) {   
            this.salary = salary;
        } else {
            System.out.println("Invalid salary amount!");
        }
    }
}

public class EncapsulationConstructorExample {
    public static void main(String[] args) {
        
        Employee emp1 = new Employee("Bhavya", 35000);

        
        System.out.println("Employee Name: " + emp1.getName());
        System.out.println("Employee Salary: " + emp1.getSalary());

        
        emp1.setSalary(40000);
        System.out.println("Updated Salary: " + emp1.getSalary());
    }
}
output
Employee Name: Bhavya
Employee Salary: 35000.0
Updated Salary: 40000.0

